[user]
	name = Shuhei Akutagawa
	email = shuhei.akutagawa+github@gmail.com
[init]
	defaultBranch = main
[pull]
	ff = only
	rebase = true
[core]
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
[delta "dark"]
	dark = true
[delta "light"]
	dark = false

[merge]
	conflictstyle = zdiff3

[include]
	path = .gitconfig.local

[includeIf "gitdir:~/ghq/github.com/newspicks/"]
	path = ~/ghq/github.com/newspicks/.gitconfig
[includeIf "gitdir:~/ghq/github.com/alpdr/"]
	path = ~/ghq/github.com/alpdr/.gitconfig
[includeIf "gitdir:~/ghq/github.com/uzabase/"]
	path = ~/ghq/github.com/uzabase/.gitconfig
[includeIf "gitdir:~/ghq/github.com/uzabase-its/"]
	path = ~/ghq/github.com/uzabase-its/.gitconfig
